<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/userImgContainer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="20dp"
        android:clipChildren="false">
        <ImageView
            android:id="@+id/userImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/person"/>
        <TextView
            android:id="@+id/onlineStatus2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/bg_green"
            android:layout_gravity="bottom|end"
            android:layout_margin="3dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/userName"
        android:layout_toRightOf="@id/userImgContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sharkz Reigns"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/lastMassageIcon"
        android:layout_toRightOf="@id/userImgContainer"
        android:layout_below="@id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/done_all"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/lastMassage"
        android:layout_toRightOf="@id/lastMassageIcon"
        android:layout_below="@id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last message"
        android:layout_marginLeft="8dp" />


        <Button
            android:id="@+id/btnAddFriend"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>